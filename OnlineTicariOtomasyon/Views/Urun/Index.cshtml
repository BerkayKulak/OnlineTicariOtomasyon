@using OnlineTicariOtomasyon.Models.Sınıflar
@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<br/>
<table class="table table-bordered">
    <tr>
        
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>

        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>

    </tr>
    @for(int i=0;i<Model.Rows.Count;i++)
    {
        <tr>
           
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
       
            <td><a href="/Urun/UrunSil/@Model.Rows[i][0]" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@Model.Rows[i][0]" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@Model.Rows[i][0]" class="btn btn-info">Satış Yap</a></td>

        </tr>
    }
</table>

<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>