@model OnlineTicariOtomasyon.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satis Yap</h2>
<br />

<h2>Yeni Ürün Sayfası</h2>

<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.UrunId)
    <input type="text" name="UrunId" value="@ViewBag.dgr1" class="form-control" readonly/>
    <br />
    @Html.LabelFor(x => x.Personel.PersonelAd)
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" } )
    <br />
    @Html.LabelFor(x => x.Cariler.CariAd)
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.dgr4, new { @class = "form-control" } )
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" name="Adet" class="form-control" max="1000" min="0" placeholder="Adet Girin" id="txt1" onkeyup="sum();"/>
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="number" name="Fiyat" class="form-control"  placeholder="Fiyat Girin" id="txt2" onkeyup="sum();"/>
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="number" name="ToplamTutar" class="form-control" placeholder="Fiyat Girin" id="txt3" onkeyup="sum();"/>

    <br />
  
    <button class="btn btn-primary">Satış Yap</button>
</form>

<br/>

<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>