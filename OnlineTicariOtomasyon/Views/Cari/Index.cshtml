@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Index</h2>

<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @for(int i=0;i<Model.Rows.Count;i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td><a href="/Cari/CariSil/@Model.Rows[i][0]" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@Model.Rows[i][0]" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@Model.Rows[i][0]" class="btn btn-default" style="background-color: lightcoral">Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Cari/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>