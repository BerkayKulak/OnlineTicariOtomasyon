@model List<OnlineTicariOtomasyon.Models.Sınıflar.Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br/>
<h2>Departman Detay Sayfası</h2>
<br/>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.d</li>
</ol>
<br/>
<table class="table table-hover">
    <tr>
        
        <th>Ad</th>
        <th>Soyad</th>
 
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
       
            <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-info" style="background-color: green">Satışlar</a></td>
        </tr>
    }
  
</table>

