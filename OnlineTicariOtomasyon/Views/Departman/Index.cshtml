@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<OnlineTicariOtomasyon.Models.Sınıflar.Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top: 20px">
    <tr>
        <th>Id</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmanId</td>
            <td>@item.DepartmanAd</td>
            <td><a class="btn btn-danger" href="/Departman/DepartmanSil/@item.DepartmanId">Sil</a></td>
            <td><a class="btn btn-success" href="/Departman/DepartmanGetir/@item.DepartmanId">Güncelle</a></td>
            <td><a class="btn btn-info" href="/Departman/DepartmanDetay/@item.DepartmanId">Detaylar</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>


