@model List<OnlineTicariOtomasyon.Models.Sınıflar.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top: 20px">
    <tr>
        <th>Id</th>
        <th>Personel Adı</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonelId</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>@item.PersonelGorsel</td>
            <td>@item.Departman.DepartmanAd</td>
            <td><a class="btn btn-success" href="/Personel/PersonelGetir/@item.PersonelId">Güncelle</a></td>
            <td><a class="btn btn-info" href="/Departman/DepartmanPersonelSatis/@item.PersonelId">Satışlar</a></td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>




